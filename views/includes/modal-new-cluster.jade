#modal-form-cluster.modal.fade(style='display: none;')
  .modal-header
    button.close(data-dismiss='modal') x
    h3 Crear Cluster
  .modal-body
    form#form-cluster.form-horizontal(method='POST', action='/clusters')
      fieldset
        input.hide(type='text', name='project'')
        .control-group
          label.control-label(for='name') Nombre
          .controls
            input(type='text', placeholder='Ingrese el nombre del cluster', name='name')
        .control-group
          label.control-label(for='status') Estado
          .controls
            input(type='text', placeholder='Ingrese el estado del cluster', name='status')
        .control-group
          label.control-label(for='area') Area
          .controls
            input(type='text', placeholder='Ingrese el area del cluster', name='area')
        .control-group
          label.control-label(for='description') Descripción
          .controls
            textarea(placeholder='Ingrese una breve descripción', name='description')
        .control-group
          label.control-label(for='description') Vendedor
          .controls
            input(type='text', placeholder='Ingrese el nombre del vendedor', name='vendor')
        .control-group
          label.control-label(for='description') Fecha de inicio
          .controls
            input(type='text', placeholder='Ingrese la fecha de inicio del cluster', name='initiation')
  .modal-footer
    button#button-save-cluster.btn.btn-primary.save Crear

